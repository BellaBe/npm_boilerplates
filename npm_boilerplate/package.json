{
  "name": "npm_boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "scss": "node-sass --output-style compressed -o static/css src/scss",
    "autoprefixer": "postcss -u autoprefixer -r static/css/*",
    "lint": "src/js",
    "uglify": "mkdir -p static/js && uglifyjs src/js/main.js -m -o static/js/app.js",
    "imagemin": "imagemin src/images static/images -p",
    "icons": "svgo -f src/images/icons && mkdir -p static/images && svg-sprite-generate -d src/images/icons -o static/images/icons.svg",
    "serve": "browser-sync start --server --files 'static/css/*.css, static/js/*.js",
    "build:css": "npm run scss && npm run autoprefixer",
    "build:js": "npm run lint && npm run uglify",
    "build:images": "npm run imagemin && npm run icons",
    "build:all": "npm run build:css && npm run build:js && npm run build:images",
    "watch:css": "npm onchange 'src/scss/*.scss' -- npm run build:css",
    "watch:js": "npm onchange 'src/js/*.js' -- npm run build:js",
    "watch:all": "parallelshell 'npm run serve' 'npm run watch:css' 'npm run watch:js",
    "postinstall": "npm run watch:all"
  },
  "keywords": [],
  "author": "BellaBe",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^9.1.5",
    "browser-sync": "^2.24.7",
    "eslint": "^5.5.0",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^4.9.3",
    "onchange": "^4.1.0",
    "parallelshell": "^3.0.2",
    "postcss-cli": "^6.0.0",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^1.0.5",
    "uglify-js": "^3.4.9"
  }
}
